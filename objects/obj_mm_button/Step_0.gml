// Tamaño de los botones
btn_width  = 180;
btn_height = 50;

// Espaciado y posiciones (centrados)
start_y = 300;      
gap_y   = 100;      

// Botón 1: Human Player
btn1_x = room_width / 2 - btn_width / 2;
btn1_y = start_y;

// Botón 2: AI Player
btn2_x = room_width / 2 - btn_width / 2;
btn2_y = start_y + gap_y;

// Botón 3: Opciones
btn3_x = room_width / 2 - btn_width / 2;
btn3_y = start_y + gap_y * 2;

// Botón 4: Salir (Renombrado de 'btn_exit' a 'btn4' para consistencia)
btn4_x = room_width / 2 - btn_width / 2;
btn4_y = start_y + gap_y * 3;